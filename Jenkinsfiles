pipeline{
    agent any
    stages {
        stage('Build') {
            steps{
                echo 'This is a build step' 
				        mavenHome = tool 'M3'
					    sh "${mavenHome}/bin/mvn -v"
            }
        }
        stage('Test') {
            steps{
                echo 'This is a test step'  
            }
        }
        stage('Deploy') {
            steps{
                echo 'This is a deploy step'    
            }
        }
    }
}